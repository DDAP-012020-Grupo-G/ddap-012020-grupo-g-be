{
    "name": "abastify-be",
    "version": "1.0.0",
    "description": "NodeJS + MongoDB API",
    "scripts": {
        "start": "node ./server.js",
        "start-dev": "nodemon ./server.js",
        "test": "nyc mocha ./tests --recursive --timeout 60000",
        "test-dev": "nodemon --exec 'nyc mocha ./tests --recursive --timeout 60000'",
        "coverage": "nyc report",
        "test-with-coverage": "nyc --reporter=lcov mocha ./tests --recursive --timeout 60000 && cat ./coverage/lcov.info | codacy-coverage && rm -rf ./coverage && rm -rf ./nyc_output"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.19.0",
        "codacy-coverage": "^3.4.0",
        "cors": "^2.8.4",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "express-jwt": "^5.3.1",
        "jsonwebtoken": "^8.5.1",
        "mocha-lcov-reporter": "^1.3.0",
        "mongodb": "^3.2.7",
        "mongoose": "^5.8.10",
        "mongoose-unique-validator": "^2.0.3",
        "rootpath": "^0.1.2"
    },
    "devDependencies": {
        "chai": "^4.2.0",
        "eslint": "^7.0.0",
        "mocha": "^7.1.1",
        "mongodb-memory-server": "^6.5.2",
        "nodemon": "^1.19.1",
        "nyc": "^15.0.1",
        "supertest": "^4.0.2"
    }
}
